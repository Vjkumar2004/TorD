<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/blue"
    >
    <View
        android:id="@+id/blue_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_above="@id/red_background"
        android:background="@color/blue" />

    <View
        android:id="@+id/red_background"
        android:layout_width="match_parent"
        android:layout_height="690dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-280dp"
        android:background="@color/white" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textSize="35sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />
    <Button
        android:id="@+id/blueTruthButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Truth"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_below="@id/BluePageNum"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:visibility="gone"/>


    <Button
        android:id="@+id/blueDareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/BluePageNum"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="Dare"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/BluePageNum"
        android:layout_width="152dp"
        android:layout_height="292dp"
        android:text="0"
        android:textSize="250sp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/RedPageNum"
        android:layout_width="152dp"
        android:layout_height="292dp"
        android:text="0"
        android:textSize="250sp"
        android:layout_below="@id/startButton"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/redTruthButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/RedPageNum"
        android:layout_marginTop="-32dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_alignParentLeft="true"
        android:textColor="@color/black"
        android:text="Truth"
        android:textSize="20sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/redDareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/RedPageNum"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-31dp"
        android:layout_alignParentRight="true"
        android:textSize="20sp"
        android:text="Dare"
        android:textColor="@color/black"
        android:visibility="gone" />
<TextView
    android:id="@+id/Box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:textColor="@color/black"
    android:textSize="20sp"
    android:layout_centerVertical="true"
    android:textAlignment="center"
    />




</RelativeLayout>